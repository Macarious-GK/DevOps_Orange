pipeline {
    agent any
    environment {
        ANSIBLE_PRIVATE_KEY = credentials('managed_private_key') // Use Jenkins credential
    }
    stages {
        stage('check_ansible_version') {
            steps {
                sh 'ansible --version'
            }
        }
        stage('ansible_playbook') {
            steps {
                script {
                    dir('Ansible/') {
                        // Run the Ansible playbook
                        sh ' ansible-playbook -i Inventory/inventory.ini Playbooks/ping_check.yml'
                    }
                }
            }
        }
    }
}
