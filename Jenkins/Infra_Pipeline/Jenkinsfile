pipeline {
    agent any
    environment {
        ANSIBLE_PRIVATE_KEY=credentials('managed_private_key') 
    }
    stages {
        stage('check_ansible_version') {
            steps {
                sh 'ansible --version'
            }
        }
        stage('ansible_playbook') {
            steps {
            sh 'ansible-playbook -i Inventory/inventory.ini --private-key=$ANSIBLE_PRIVATE_KEY Playbooks/ping_check.yml'
        }
        }
        
        }
    }
